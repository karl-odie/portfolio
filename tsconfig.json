{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "module": "esnext",
    "target": "es2022",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "lib": ["es2020", "dom"],
    "baseUrl": ".",
    "paths": {
      "@portfolio/*": ["frontend/*"]
    }
  },
  "exclude": ["./cypress.config.ts"]
}
